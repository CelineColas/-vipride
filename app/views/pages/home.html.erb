<div class="wrapper-top">
  <div class="text-center">
    <h1 id="title">VipRide</h1>
    <h3>Click on it, drive it !</h3>
  </div>

  <div class="text-center form-inline search-bar">
    <%= form_tag(cars_path, method: "get") do %>
    <%= label_tag(:brand, "Search for:") %>
    <%= text_field_tag(:brand, nil, placeholder: "Brand") %>
    <%= submit_tag("Search") %>
    <% end %>
  </div>
</div>

<!-- Car cards -->
<div class="wrapper-bottom">
  <div class="row">
  <% @cars.each do |car| %>
    <div class="col-xs-12 col-md-6 col-lg-4 car-card">
      <% if car.photo %>
      <%= link_to car_path(car) do %>
      <%= cl_image_tag car.photo.fullpath, class: "card" %>
      <% end %>
      <% else %>
      <%= link_to car_path(car) do %>
      <%= image_tag 'Placeholder_car.jpg', class: "card" %>
      <% end %>
      <% end %>
      <div class="card-content">
      <%= car.brand %>
      <%= car.model %>
      </div>
    </div>
  <% end %>
  </div>
</div>
