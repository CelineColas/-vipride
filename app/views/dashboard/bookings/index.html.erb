
<div class="dashboard"></div>
<div class="dashboard-wrapper">
      <div id="data">
          <h2 class = "sky">Manage bookings</h2>

          <table class="tableone">
            <thead>
              <tr>
                <th class = "cellone">User</th>
                <th class = "cellone">Car</th>
                <th class = "cellone">Message</th>
                <th class = "cellone">Start_date - end_date</th>
                <th class = "cellone">Status</th>
              </tr>
            </thead>

            <tbody class="split" >

              <% @bookings.each do |booking| %>
                <% if booking.status == "Pending" || "Accepted"%>
                <tr>
                  <td class = "celltwo"> <%= current_user.name %></td>
                  <td class = "celltwo"> <%= booking.id %> </td>
                  <td class = "celltwo"> <%= booking.message %> </td>
                  <td class = "celltwo"> <%= booking.start_date %> / <%= booking.end_date %> </td>
                  <td class = "celltwo">
                    <p>
                      <% if booking.status == "Pending" %>

                        <%= link_to approve_dashboard_booking_path(booking), method: :patch do %>
                        <button class="btn btn-success"> Accept</button>
                        <%end%>

                        <%= link_to reject_dashboard_booking_path(booking), method: :patch do %>
                        <button class="btn btn-warning"> Reject</button>
                        <%end%>
                      <%else %>
                        <%= booking.status %>

                      <%end%>

                    </p>

                  </td>
               <% end %>
               </tr>
             <% end %>

            </tbody>



          </table>
          <div class="return">
              <%= link_to 'Back', dashboard_profile_path, class: "btn btn-primary" %>
          </div>

      </div>
</div>

