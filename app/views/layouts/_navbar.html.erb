<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag ('logo.png') %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">


    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if user_signed_in?  %>
          <% if current_user.facebook_picture_url %>
            <%= image_tag current_user.facebook_picture_url, height: 50, width: 50, id: "navbar-wagon-menu", class: "avatar dropdown-toggle", data: { toggle: "dropdown" } %>
          <% elsif current_user.photo %>
            <%= cl_image_tag current_user.photo.path, height: 40, width: 40, class: "avatar-large dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: "dropdown" } %>
          <% else %>
            <%= image_tag 'profile_img.png', height: 40, width: 40, class: "avatar-large dropdown-toggle", id: "navbar-wagon-menu", data: { toggle: "dropdown" } %>
          <% end %>
          <% if current_user.name %>
          <span class="user_name"><%= current_user.name %></span>
          <% end %>
        <% end %>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

          <li><%= link_to "My dashboard" , dashboard_profile_path %></li>
          <li><%= link_to "Log Out" , destroy_user_session_path, method: :delete %></li>

        </ul>
      </div>
    </div>

    <!-- Buttons (call-to-action) -->
    <div class="buttons">
      <div class="navbar-wagon-item btn">
      <%= link_to "Sign up", new_user_registration_path, class: "btn-sign btn-danger btn-lg" %>
      </div>

      <div class="navbar-wagon-item btn">
        <%= link_to "Log in",  new_user_session_path, class: "btn-log btn-primary btn-lg" %>
      </div>
    </div>
  </div>

<!-- Dropdown appearing on mobile only -->
<div class="navbar-wagon-item hidden-md hidden-lg">
  <div class="dropdown">
    <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <li><a href="">Log in</a></li>
      <li><a href=" new_user_registration_path">Sign up</a></li>
    </ul>
  </div>
</div>
</div>
